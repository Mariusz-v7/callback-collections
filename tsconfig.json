{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "rootDir": "src",
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,

        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "callback-collections": [ "src/main/index" ]
        }
    },
    "exclude": [
        "node_modules",
        ".git",
        "resources",
        "index.ts"
    ]
}